<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".DashboardUserActivity">
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="USER DASHBOARD"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_below="@+id/title"
            android:text="abc@example.com"
            android:textColor="@color/white"/>
        <ImageButton
          android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_power_off"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/categoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="CHOOSE A CATEGORY TO READ"
        android:textColor="@color/black"
        android:fontFamily="serif-monospace"
        android:textSize="25dp" />

    <Button
        android:id="@+id/fiction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoo"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="FICTION"
        android:textSize="20dp" />

    <Button
        android:id="@+id/actionn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fiction"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="ACTION AND ADVENTURE"
        android:textSize="20dp" />

    <Button
        android:id="@+id/classics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionn"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="CLASSICS"
        android:textSize="20dp" />

    <Button
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classics"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="HISTORICAL FICTION"
        android:textSize="20dp" />
    <Button
        android:id="@+id/fantasy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="FANTASY"
        android:textSize="20dp" />

    <Button
        android:id="@+id/kids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fantasy"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="KIDS BOOKS"
        android:textSize="20dp" />

    <Button
        android:id="@+id/selfhelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kids"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="SELF HELP BOOKS"
        android:textSize="20dp" />

    <Button
        android:id="@+id/magazines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selfhelp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button01"
        android:fontFamily="sans-serif-condensed"
        android:text="MAGAZINES"
        android:textSize="20dp" />




</RelativeLayout>